generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Empresa {
  IdEmpresa     Int      @id @default(autoincrement()) @map("id")
  nombreEmpresa String
  fechaCreacion DateTime @default(now())
  local         Local[]
}

model Local {
  IdLocal     Int     @id @default(autoincrement()) @map("id")
  nombreLocal String
  IdEmpresa   Int     @map("empresaId")
  empresa     Empresa @relation(fields: [IdEmpresa], references: [IdEmpresa])
}
